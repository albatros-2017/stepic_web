server {
  listen 80 default;
  error_log /home/yal/box/web/error.log;
  access_log /home/yal/box/web/access.log;
  location ^~ /uploads/ {
    root /home/box/web;
  }
  location ~* ^.+\.\w+$ {
    root /home/yal/box/web/public;
  }
  location / {
    #return 404;
    root /home/yal/box/web/public;
  }
}
